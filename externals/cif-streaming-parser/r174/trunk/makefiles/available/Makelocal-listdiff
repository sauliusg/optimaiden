# List failed tests

OUTP_DIR ?= tests/outputs
DIFF_EXT ?= diff

.PHONY: failed listdiff

failed listdiff: ## test
	@-find ${OUTP_DIR} -type f -name '*.${DIFF_EXT}' -size +0 | sort -u
